@model IEnumerable<PostViewModel>

@{ }

<h2>Admin Panel</h2>

@if (Model.Count() > 0)
{
    foreach (var post in Model)
    {
<li>
    <a asp-controller="AdminPanel" asp-action="Display" asp-route-id="@post.Id">
        @post.Title
    </a>
    ||
    <a asp-controller="AdminPanel" asp-action="Edit" asp-route-id="@post.Id">
        Edit
    </a>
    ||
    <a asp-controller="AdminPanel" asp-action="Delete" asp-route-id="@post.Id">
        Remove
    </a>
    ||
    <a asp-controller="AdminPanel" asp-action="Details" asp-route-id="@post.Id">
        Details
    </a>

</li>
    }
}
else
{
    <h3>Sorry! There is no posts to show right now :(</h3>
    <h4>... come back later :) </h4>
}