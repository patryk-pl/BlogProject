@model PostViewModel

@{

}

<div>
    <form asp-controller="AdminPanel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div>
            @{
                var base64 = Convert.ToBase64String(Model.Image);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" height="100%" width="100%" />
        </div>
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>

        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>

        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="0">Travel</option>
                <option value="1">Programing</option>
                <option value="3">Photography</option>
            </select>
        </div>

        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>Body</label>
            <textarea asp-for="Body"></textarea>
        </div>
        <div>
            <label asp-for="Image"></label>
            <input type="file" />
        </div>
        <partial name="_EditAndBackToList" model="@Model.Id" />
    </form>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }


}