@model IEnumerable<PostViewModel>

@{ }

<h2>All of my posts</h2>
<img src="~/content/static/blog_image.jpg" width="500px" />
@if (Model.Count() > 0)
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <a asp-area="Customer" asp-controller="Home" asp-action="Display" asp-route-id="@post.Id">
                    @post.Title
                </a>
            </li>
        }
    </ul>
}
else
{
    <h3>Sorry! There is no posts to show right now :(</h3>
    <h4>... come back later :) </h4>
}
