<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>

        <h1>Welcome on my page!</h1>
   
        <a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
        <a asp-area="Customer" asp-controller="Home" asp-action="Posts">Posts</a>

        <a asp-area="Admin" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>
        <a asp-area="Admin" asp-controller="AdminPanel" asp-action="Create">Create New Post</a>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-area="Identity" asp-controller="Auth" asp-action="Logout">Sign Out</a>
        }
        else
        {
            <a asp-area="Identity" asp-controller="Auth" asp-action="Login">Sign In</a>
        }
    </nav>

    <div>
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
